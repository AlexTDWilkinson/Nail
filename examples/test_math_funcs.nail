// Test all math functions

abs_test:f = math_abs(-5.7);
sqrt_test:f = math_sqrt(16.0);
pow_test:f = math_pow(2.0, 3.0);
round_test:f = math_round(3.7);
floor_test:f = math_floor(3.7);
ceil_test:f = math_ceil(3.2);
