// Comprehensive test of all stdlib functions

// String functions
greeting:s = `Hello, World!`;
trimmed:s = string_trim(`  spaces  `);
print(trimmed);

upper:s = string_to_uppercase(greeting);
print(upper);

lower:s = string_to_lowercase(upper);
print(lower);

replaced:s = string_replace(greeting, `World`, `Nail`);
print(replaced);

str_len:i = string_len(greeting);
print(to_string(str_len));

// Math functions
x_value:f = -5.7;
abs_x:f = math_abs(x_value);
print(to_string(abs_x));

sqrt_val:f = math_sqrt(16.0);
print(to_string(sqrt_val));

power:f = math_pow(2.0, 3.0);
print(to_string(power));

rounded:f = math_round(3.7);
print(to_string(rounded));

floored:f = math_floor(3.7);
print(to_string(floored));

ceiled:f = math_ceil(3.2);
print(to_string(ceiled));

min_val:f = math_min(5.0, 3.0);
print(to_string(min_val));

max_val:f = math_max(5.0, 3.0);
print(to_string(max_val));

random_val:f = math_random();
print(to_string(random_val));

// Array functions
v numbers:[i] = [1, 2, 3, 4, 5];
arr_len:i = array_len(numbers);
print(to_string(arr_len));

v strings:[s] = [`hello`, `world`, `from`, `nail`];
joined:s = array_join(strings, ` `);
print(joined);

// Time functions
now_time:i = time_now();
print(to_string(now_time));

formatted_time:s = time_format(now_time, `%Y-%m-%d`);
print(formatted_time);

// Environment functions
args:[s] = env_args();
print(to_string(array_len(args)));

// Type conversions
num_str:s = `42`;
number:i = to_int(num_str);
print(to_string(number));

float_str:s = `3.14`;
float_num:f = to_float(float_str);
print(to_string(float_num));

// Path functions
joined_path:s = path_join(`/home`, `user`);
print(joined_path);

print(`All stdlib functions tested!`);