// Structs - Define custom data types
struct Position {
    x:f,
    y:f
}

struct Player {
    player_name:s,
    player_level:i,
    health_points:f,
    position:Position
}

// Enums - Define variants
enum GameState {
    MainMenu,
    Playing,
    GameOver
}

// Basic Variables and Types
name:s = `Alice`;
age:i = 25;
score:f = 95.7;

// Function Calls and String Conversion
greeting:s =string_from(age);
timestamp:i = time_now();
print(`Hello from Nail!`);

// Math and Operators
result:i = age + 10;
average:f = (score + 85.3) / 2.0;

// Parallel Processing (Nail's superpower!)
parallel {
   task1:s =string_from(42);
   task2:i = time_now();
    print(`Running in parallel!`);
   fast_calc:i = 100 * 50;
}

// Arrays
