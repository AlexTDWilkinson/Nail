// Basic binding examples from the website
// These demonstrate Nail's fundamental syntax

// 1. Binding Values
name:s = `Alice`;
age:i = 30;
scores:a:i = [95, 87, 92];

// 2. Functions
f greet(name:s):s {
    r array_join([`Hello, `, name, `!`], ``);
}

// 3. Collection Operations
numbers:a:i = [1, 2, 3, 4, 5];
doubled:a:i = map num in numbers { y num * 2; };
sum:i = reduce acc num in numbers from 0 { y acc + num; };

// Test the examples
print(array_join([`Name: `, name], ``));
print(array_join([`Age: `, string_from(age)], ``));
print(array_join([`Scores: `, string_from_array_i64(scores)], ``));

greeting:s = greet(`World`);
print(greeting);

print(array_join([`Doubled: `, string_from_array_i64(doubled)], ``));
print(array_join([`Sum: `, string_from(sum)], ``));